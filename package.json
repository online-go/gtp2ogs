        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.16.0",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.5",
        "@types/split2": "^3.2.1",
        "@types/ws": "^8.5.4",
        "@types/yargs": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^8.18.0",
        "@typescript-eslint/parser": "^8.18.0",
        "@stylistic/eslint-plugin": "^2.12.0",
        "eslint": "^9.16.0",

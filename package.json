        "@typescript-eslint/eslint-plugin-tslint": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.5",
        "@types/split2": "^3.2.1",
        "@types/ws": "^8.5.4",
        "@types/yargs": "^17.0.23",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.26.0",

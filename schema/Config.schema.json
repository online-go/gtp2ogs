{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Config",
    "definitions": {
        "Config": {
            "type": "object",
            "properties": {
                "apikey": {
                    "type": "string",
                    "description": "API key for the bot."
                },
                "verbosity": {
                    "type": "number",
                    "description": "Enable verbose logging.",
                    "default": 0
                },
                "server": {
                    "type": "string",
                    "description": "Server URL to connect to, defaults to online-go.com",
                    "default": "https://online-go.com"
                },
                "username": {
                    "type": "string",
                    "description": "Bot username. This is automatically set."
                },
                "bot": {
                    "$ref": "#/definitions/BotConfig",
                    "description": "Config for how to run your bot"
                },
                "resign_bot": {
                    "$ref": "#/definitions/BotConfig"
                },
                "opening_bot": {
                    "$ref": "#/definitions/BotConfig"
                },
                "farewellscore": {
                    "type": "boolean",
                    "description": "Send a message saying what the bot thought the score was at the end of the game"
                },
                "log_file": {
                    "type": "string"
                },
                "min_rank": {
                    "type": "number",
                    "description": "Minimum rank to accept games from",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 35
                },
                "greeting": {
                    "type": "string"
                },
                "farewell": {
                    "type": "string"
                },
                "debug": {
                    "type": "boolean"
                },
                "aichat": {
                    "type": "boolean"
                },
                "hidden": {
                    "type": "boolean"
                },
                "timeout": {},
                "corrqueue": {},
                "json": {
                    "type": "boolean"
                },
                "logfile": {
                    "type": "string"
                },
                "min_move_time": {
                    "type": "number"
                },
                "noclock": {
                    "type": "boolean"
                },
                "nopause": {
                    "type": "boolean"
                },
                "ogspv": {
                    "type": "boolean"
                },
                "showboard": {
                    "type": "boolean"
                },
                "start_date": {
                    "type": "string",
                    "format": "date-time"
                },
                "startupbuffer": {
                    "type": "number"
                },
                "greetingbotcommand": {
                    "type": "string"
                },
                "persistnoncorr": {
                    "type": "boolean"
                },
                "nopauseranked": {
                    "type": "boolean"
                },
                "nopauseunranked": {
                    "type": "boolean"
                },
                "persist": {
                    "type": "boolean"
                }
            },
            "required": [
                "apikey"
            ],
            "additionalProperties": false,
            "description": "Bot config"
        },
        "BotConfig": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "instances": {
                    "type": "number"
                },
                "pv_format": {
                    "type": "string"
                }
            },
            "required": [
                "command"
            ],
            "additionalProperties": false,
            "description": "Bot config"
        }
    }
}